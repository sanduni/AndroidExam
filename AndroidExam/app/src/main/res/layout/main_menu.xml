<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/monthly_sales_height_60"
        android:text="@string/monthly_sales"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20sp"
        android:textColor="@color/colourWhite"
        android:id="@+id/monthlySalesTxt"
        android:background="@drawable/btn_selector" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/monthly_sales_height_60"
            android:layout_marginTop="40dp"
            android:id="@+id/hourlyActivityCount"
            android:textSize="20sp"
            android:text="@string/hourly_activity_count"
            android:textColor="@color/colourWhite"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/btn_selector" />
    </LinearLayout>

</RelativeLayout>